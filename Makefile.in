# -*-makefile-*-
# Makefile.in
# @configure_input@

repmgr_subdir = .
repmgr_top_builddir = .

MODULE_big = repmgr

EXTENSION = repmgr

DATA = \
  repmgr--unpackaged--4.0.sql \
  repmgr--unpackaged--5.1.sql \
  repmgr--unpackaged--5.2.sql \
  repmgr--unpackaged--5.3.sql \
  repmgr--4.0.sql \
  repmgr--4.0--4.1.sql \
  repmgr--4.1.sql \
  repmgr--4.1--4.2.sql \
  repmgr--4.2.sql \
  repmgr--4.2--4.3.sql \
  repmgr--4.3.sql \
  repmgr--4.3--4.4.sql \
  repmgr--4.4.sql \
  repmgr--4.4--5.0.sql \
  repmgr--5.0.sql \
  repmgr--5.0--5.1.sql \
  repmgr--5.1.sql \
  repmgr--5.1--5.2.sql \
  repmgr--5.2.sql \
  repmgr--5.2--5.3.sql \
  repmgr--5.3.sql \
  repmgr--5.3--5.4.sql \
  repmgr--5.4.sql

REGRESS = repmgr_extension

# Hacky workaround to install the binaries
SCRIPTS_built = repmgr repmgrd
SCRIPTS_no_built = repmgr.conf repmgr_service uxdb_service

all: \
	repmgr \
	repmgrd

# When in development add -Werror
UX_CPPFLAGS = -std=gnu89 -I$(includedir_internal) -I$(libuxsql_srcdir) -Wall -Wmissing-prototypes -Wmissing-declarations $(EXTRA_CFLAGS)
SHLIB_LINK = $(libuxsql)



OBJS = \
	repmgr.o

include Makefile.global

ifeq ($(vpath_build),yes)
	HEADERS = $(wildcard *.h)
else
	HEADERS_built = $(wildcard *.h)
endif

$(info Building against UXsinoDB $(MAJORVERSION))

REPMGR_CLIENT_OBJS = repmgr-client.o \
	repmgr-action-primary.o repmgr-action-standby.o repmgr-action-witness.o \
	repmgr-action-cluster.o repmgr-action-node.o repmgr-action-service.o repmgr-action-daemon.o \
	configdata.o configfile.o configfile-scan.o log.o strutil.o controldata.o dirutil.o compat.o \
	dbutils.o sysutils.o uxbackupapi.o sshpass.o
REPMGRD_OBJS = repmgrd.o repmgrd-physical.o configdata.o configfile.o configfile-scan.o log.o \
	dbutils.o strutil.o controldata.o compat.o sysutils.o sshpass.o

DATE=$(shell date "+%Y-%m-%d")

repmgr_version.h: repmgr_version.h.in
	$(SED) -E 's/REPMGR_VERSION_DATE.*""/REPMGR_VERSION_DATE "$(DATE)"/' $< >$@;

configfile-scan.c: configfile-scan.l

$(REPMGR_CLIENT_OBJS): repmgr-client.h repmgr_version.h

# 是否依赖国密进行编译
GMSSL=no
SSLLIBS_STA=${STALIB_INSTALL}/openssl_install/lib/libssl.a ${STALIB_INSTALL}/openssl_install/lib/libcrypto.a
ifeq ($(GMSSL),yes)
	SSLLIBS_STA=${repmgr_top_builddir}/../../contrib/uxgmssl/GmSSL/libgmssl.a ${repmgr_top_builddir}/../../contrib/uxgmssl/GmSSL/libgmcrypto.a
endif

UXFS=yes
ifeq ($(UXFS),no)
	LIBS2 = -luxcommon -luxport -lpthread -lxml2 -lz -lreadline -lrt -lcrypt -ldl -lm \
			${repmgr_top_builddir}/../../../uxfs-1.0/nouxfs/cpp/build/liblibxtreemfs4c.a \
			${SSLLIBS_STA} 
else
	LIBS2 = -luxcommon -luxport -lpthread -lxml2 -lz -lreadline -lrt -lcrypt -ldl -lm \
	 		${repmgr_top_builddir}/../../../uxfs-1.0/cpp/build/liblibxtreemfs4c.a \
			${repmgr_top_builddir}/../../../uxfs-1.0/cpp/build/libxtreemfs.a \
			${repmgr_top_builddir}/../../../uxfs-1.0/cpp/build/libconnectredis.a \
			${repmgr_top_builddir}/../../../thirdparty/redis-5.0.3/deps/xredis/libxredis.a \
			${repmgr_top_builddir}/../../../thirdparty/redis-5.0.3/deps/hiredis/libhiredis.a \
			${repmgr_top_builddir}/../../../thirdparty/protobuf-2.5.0/src/.libs/libprotobuf.a \
			${repmgr_top_builddir}/../../../boost_1_62_0/stage/lib/libboost_system.a \
			${repmgr_top_builddir}/../../../boost_1_62_0/stage/lib/libboost_thread.a \
			${repmgr_top_builddir}/../../../boost_1_62_0/stage/lib/libboost_program_options.a \
			${repmgr_top_builddir}/../../../boost_1_62_0/stage/lib/libboost_regex.a \
			${SSLLIBS_STA} \
			-Wno-unused-function -Wno-sign-compare -pthread -lstdc++ -lm -lrt
endif

repmgr: $(REPMGR_CLIENT_OBJS)
	$(CC) $(CFLAGS) $(REPMGR_CLIENT_OBJS) $(libuxsql_uxport) $(LDFLAGS) $(LDFLAGS_EX) $(LIBS2) -o $@$(X)

repmgrd: $(REPMGRD_OBJS)
	$(CC) $(CFLAGS) $(REPMGRD_OBJS) $(libuxsql_uxport) $(LDFLAGS) $(LDFLAGS_EX) $(LIBS2) -o $@$(X)

$(REPMGR_CLIENT_OBJS): $(HEADERS)
$(REPMGRD_OBJS): $(HEADERS)

# Ensure Makefiles are up-to-date (should we move this to Makefile.global?)
Makefile: Makefile.in config.status configure
	./config.status $@

Makefile.global: Makefile.global.in config.status configure
	./config.status $@

doc:
	$(MAKE) -C doc all

install-doc:
	$(MAKE) -C doc install

clean: additional-clean

maintainer-clean: additional-maintainer-clean

additional-clean:
	rm -f *.o
	rm -f repmgr_version.h

additional-maintainer-clean: clean
	$(MAKE) -C doc maintainer-clean
	rm -f config.status config.log
	rm -f config.h
	rm -f repmgr_version.h
	rm -f Makefile
	rm -f Makefile.global
	@rm -rf autom4te.cache/

ifeq ($(MAJORVERSION),$(filter $(MAJORVERSION),9.3 9.4))
# We must emulate SCRIPTS_built for Ux < 9.5 as UXXS doesn't support it
install: install-scripts
install-scripts:
	$(INSTALL_SCRIPT) $(SCRIPTS_built) '$(DESTDIR)$(bindir)/'
	$(INSTALL_SCRIPT) $(SCRIPTS_no_built) '$(DESTDIR)$(bindir)/'
.PHONY: install-scripts
installdirs: installdirs-scripts
installdirs-scripts:
	$(MKDIR_P) '$(DESTDIR)$(bindir)'
.PHONY: installdirs-scripts
endif

